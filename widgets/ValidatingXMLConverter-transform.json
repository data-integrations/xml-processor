{
  "metadata": {
    "spec-version": "1.0"
  },
  "configuration-groups": [
    {
      "label": "Validating XML Converter Configuration",
      "properties": [
        {
          "widget-type": "textbox",
          "label": "XML Schema (XSD) File Path",
          "name": "xsdPath"
        },
        {
          "widget-type": "textbox",
          "label": "XML Input Field Name",
          "name": "fieldName"
        },
        {
          "widget-type": "select",
          "label": "Ignore XML Schema Error",
          "name": "ignoreSchemaError",
          "widget-attributes": {
            "values": [
              "true",
              "false"
            ],
            "default": "true"
          }
        },
        {
          "widget-type": "textbox",
          "label": "Timezone",
          "name": "timezone"
        },
        {
          "widget-type": "keyvalue",
          "widget-attributes": {
            "showDelimiter": "false"
          },
          "label": "DataMasks",
          "name": "dataMasks"
        }
      ]
    }
  ],
  "outputs": [ ]
}
